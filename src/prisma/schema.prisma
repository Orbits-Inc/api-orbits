datasource db {
  provider = "mongodb"
  url      = env("ATLAS_URI")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model User {
  user_id String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  // username        String   @unique
  // role            String
  // display_picture String
  // bio             String
  // notifications   String[]
  email   String   @unique
  // posts           Post[]
  // followers       User[]
  // following       User[]   @relation("UserToUser")
  posts   String[]
  // Post        Post?    @relation(fields: [postPost_id], references: [post_id])
  // postPost_id String?  @db.ObjectId
}

model Post {
  post_id     String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  title       String
  description String
  image       String
  content     String
  read_time   Int
  date        DateTime
  tags        String[]
  likes       String[]
  comments    String[]
  author_id   String?

}
