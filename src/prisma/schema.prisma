datasource db {
  provider = "mongodb"
  url      = env("ATLAS_URI")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

model User {
  user_id         String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  username        String   @unique
  name            String
  display_picture String
  bio             String
  email           String   @unique
  posts           String[]
  followers       String[]
  following       String[]
}

model Post {
  post_id     String   @id @default(dbgenerated()) @map("_id") @db.ObjectId
  title       String
  description String
  image       String
  content     String
  read_time   Int
  date        DateTime
  tags        String[]
  likes       String[]
  comments    String[]
  author_id   String?
}
